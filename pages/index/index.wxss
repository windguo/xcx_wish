.container {
    background-color: #eee;
    color: #333;
}
.nameInput {
    text-align: center;
    width: 90%;
    margin-top:200rpx;
    margin-left:5%;
    height: 120rpx;
    border-radius: 30rpx;
    border: 5rpx solid #d9ba6a;
    background-color: #fff;
    line-height: 120rpx;
    font-size:36rpx;
}
.radio-group{
    margin:100rpx;
}
.radio-group label{
    width:50%;
    display: inline-block;
    margin-bottom:50rpx;
    font-size: 45rpx;
}

.btn{
    width: 80%;
    margin-left:10%;
}
.submit-btn {
    width: 100%;
    height: 94rpx;
    line-height: 94rpx;
    background-color: #d9ba6a;
    border-radius: 10rpx;
    font-size: 36rpx;
    color: #fff;
    font-weight: bold;
    margin-top: 100rpx;
    text-align: center;
}

.submit-btn::after {
    display: none;
}
.userinfoArea{padding:10rpx 50rpx;font-size:36rpx;text-align: center;display: block;}
.userinfoArea .logined{height:100rpx;}
.userinfoArea span{color:red;margin: 0rpx 20rpx}

.userinfoArea .loginBefore{
    margin-top:30%
}
.userinfoArea .loginBefore .content {
    padding:120rpx 0;
}
.userinfoArea .loginBefore .header .img {
    width: 180rpx;
    height: 180rpx;
    border-radius: 50%;
}
.addGif{position: fixed;top:0;right:15rpx;width:200px;height:80px;}